@model SurveyApp.Database.Models.Survey;

@{
    ViewData["Title"] = "Edit survey";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edit survey</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Description"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn w-75" style="background-color: #f27d42"  value="Update" />
                        </div>
                        <div class="col">
                            <a asp-controller="Survey" asp-action="Details" asp-route-Id="@Model.Id" class="btn w-75" style="background-color:#96FFFF">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

