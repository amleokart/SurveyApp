@model SurveyApp.Database.Models.Survey;
@{
    ViewData["Title"] = "Survey details";
    var survey = ViewData.Model;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div>
        <h1>Details for @survey.Name </h1>
        <h2>Description: </h2>
        <h3>Questions <a class="btn" style="background-color: #4aff4a ">Add a new question  <i class="glyphicon glyphicon-plus"></i> </a></h3>
        <ul class="list-group">
            @foreach (var question in survey.Questions)
            {
                <li class="list-group-item active" style="color: black; margin: 5px; width: fit-content; background-color: #47b6ff ">
                    <ul class="list-inline m-0">
                        <a>@question.Content</a>
                        <li class="list-inline-item" style="padding:5px">
                            <a class="btn" style="background-color: #00ffff "><i class="glyphicon glyphicon-edit"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-controller="question" asp-action="delete" asp-route-Id="@question.Id" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                        </li>
                    </ul>
                </li>
            }
        </ul>
    </div>
</body>
</html>
